<h1>Sales#new</h1>
<% if notice.present? %>
  <%= notice %>
<% end %>

<% if alert.present? %>
  <%= alert %>
<% end %>

<%= form_with(model: @sale, local: true) do |form| %>

  <%= form.label :detail %>
  <%= form.text_area :detail %>
  <br>
  <%= form.label :category %>
  <%= form.text_field :category %>
  <br>
  <%= form.label :value  %>
  <%= form.number_field :value %>
  <br>
  <%= form.label :discount %>
  <%= form.number_field :discount %>
  <br>
  <%= form.label :tax%>
  <%= form.check_box :tax %>
  <br>
  <%= form.submit 'Enviar' %>

<% end %>